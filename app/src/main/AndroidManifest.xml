<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- SMS Permission for reading transaction messages -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MoneyTrackerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyTracker"
        tools:targetApi="34">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MoneyTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SMS Broadcast Receiver for real-time transaction detection -->
        <receiver
            android:name=".service.SmsReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- Notification Action Receiver for transaction dismiss -->
        <receiver
            android:name=".service.NotificationActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.money.tracker.DISMISS_TRANSACTION" />
            </intent-filter>
        </receiver>

        <!-- UPI Notification Dismiss Receiver -->
        <receiver
            android:name=".service.UpiNotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.money.tracker.DISMISS_UPI_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <!-- Accessibility Service for UPI app monitoring -->
        <service
            android:name=".service.UpiMonitorService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

    </application>

</manifest>
